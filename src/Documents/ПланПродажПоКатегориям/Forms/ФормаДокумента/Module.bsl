		ПараметрыПроверки = Новый Структура;
		ПараметрыПроверки.Вставить("ИмяТЧ",                    "ТоварныеКатегории");
		ПараметрыПроверки.Вставить("ПредставлениеТЧ",          НСтр("ru='Товарные категории';uk='Товарні категорії'"));
		ПараметрыПроверки.Вставить("Периодичность",            Объект.Периодичность);
