&НаСервере
Процедура ЗагрузитьТекстXMLНаФормуНаСервере(XML)	

	СтруктураГруппы = ЭтаФорма[СтруктураРеквизитовФормы.мИдГруппы1];	
	
	ЧтениеXML = Новый ЧтениеXML;
	ЧтениеXML.УстановитьСтроку(XML);
	ЧтениеXML.ИгнорироватьПробелы = Ложь;
	
	Пока ЧтениеXML.Прочитать() Цикл
		
		Если ЧтениеXML.ТипУзла = ТипУзлаXML.НачалоЭлемента Тогда
			
			ТекУзел = ЧтениеXML.Имя;
			
			Если Найти(ТекУзел, "XXXX") > 0 Тогда
				
				ТекНомерСтроки = 0;
				Пока ЧтениеXML.ПрочитатьАтрибут()  Цикл
					Если ЧтениеXML.Имя = "ROWNUM" Тогда
						ТекНомерСтроки =  Число(ЧтениеXML.Значение);
						Прервать;
					КонецЕсли;
				КонецЦикла;
				
				Пока ТекНомерСтроки > СтруктураГруппы.Количество() Цикл
					ВставитьДополнительнуюСтроку(ЭтаФорма, СтруктураРеквизитовФормы.мИдГруппы1);
				КонецЦикла;
				
			КонецЕсли;
			
		ИначеЕсли ЧтениеXML.ТипУзла = ТипУзлаXML.Текст Тогда
			
			ТекЗначение = ЧтениеXML.Значение;
			
			ПозицияНомераСтроки = Найти(ТекУзел, "XXXX");
			Если  ПозицияНомераСтроки > 0 Тогда
				
				ТекИмяОбласти = "R" + Сред(ТекУзел, ПозицияНомераСтроки + 4) + "_" + Формат(ТекНомерСтроки,"ЧГ=;");
				ТекИмяОбласти  = СтрЗаменить(ТекИмяОбласти, "RG105_2S", "RG1052S");
				Если НЕ ТабличныйДокумент.Области.Найти(ТекИмяОбласти) = Неопределено Тогда
					ТабличныйДокумент.Область(ТекИмяОбласти).Значение = ПреобразоватьЗначениеXML(ТекЗначение, ТекИмяОбласти); 	
				КонецЕсли;
								
			Иначе
				
				Если НЕ ТабличныйДокумент.Области.Найти(ТекУзел) = Неопределено Тогда
					ТабличныйДокумент.Область(ТекУзел).Значение = ПреобразоватьЗначениеXML(ТекЗначение, ТекУзел); 	
				КонецЕсли;	
				
			КонецЕсли;
			
		ИначеЕсли ЧтениеXML.ТипУзла = ТипУзлаXML.КонецЭлемента Тогда
			
			ТекУзел = "";
			
		КонецЕсли;
	
	КонецЦикла;
	ЧтениеXML.Закрыть();
	
КонецПроцедуры	

&НаСервере
Функция ПреобразоватьЗначениеXML(Значение, ИмяОбласти)

	ТекОбласть = ТабличныйДокумент.Область(ИмяОбласти);
	
	ТипЗначения = ТекОбласть.ТипЗначения;
	
	Если ТипЗначения.СодержитТип(Тип("Дата")) Тогда
	
		Значение = СокрЛП(Значение);
		
		Если ПустаяСтрока(Значение) Тогда
			
			Значение = '00010101';
			
		Иначе	
		
			ТекДень	= Сред(Значение,1,2);
			ТекМес	= Сред(Значение,3,2);			
			ТекГод	= Сред(Значение,5,4);			
			
			Значение = Дата(""+ТекГод+ТекМес+ТекДень);
		
		КонецЕсли;
		
	ИначеЕсли Врег(ИмяОбласти) = "HORIG1"
		  ИЛИ Врег(ИмяОбласти) = "HERPN"
		  ИЛИ Врег(ИмяОбласти) = "HERPN0"
		  ИЛИ Врег(ИмяОбласти) = "H01" 
		  ИЛИ Найти(ИмяОбласти, "G32") > 0 
		  ИЛИ Врег(ИмяОбласти) = "H03" 
		  Тогда
		
		//Если  ТипЗначения.СодержитТип(Тип("Строка"))
		//	И ТипЗначения.КвалификаторыСтроки.Длина = 1 Тогда
			Значение = ?(ЗначениеЗаполнено(Значение),"Х","");
		//КонецЕсли;
		
	КонецЕсли;
	
	Возврат Значение;
	
КонецФункции

