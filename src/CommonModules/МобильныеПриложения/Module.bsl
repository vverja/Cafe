		ОбъектДанных = Документы[ИмяОбъекта].СоздатьДокумент();
		ОбъектДанных.УстановитьСсылкуНового(СсылкаНаОбъект);
	КонецЕсли;

	ЗаполнитьОбъектПоДереву(ОбъектДанных, ДеревоОбъекта, СтруктураСоставаОбъекта, УзелОбмена);

