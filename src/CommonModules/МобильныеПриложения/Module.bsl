					КонецЦикла;
					
					ЗаписьXML.ЗаписатьКонецЭлемента(); // Row
					
				КонецЦикла;
				
			КонецЕсли;
			
			ЗаписьXML.ЗаписатьКонецЭлемента(); // Имя табличной части
			
		КонецЕсли;

	КонецЦикла;

