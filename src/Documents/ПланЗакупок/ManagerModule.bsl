//   Соотвествие   - Макеты для операндов
//
Функция МакетыОперандовПлана(Макеты = Неопределено) Экспорт 

	Если Макеты = Неопределено Тогда
		Макеты = Новый Соответствие;
	КонецЕсли; 
	
	Макеты.Вставить("ПланыЗакупок",                   ПолучитьМакет("СКД_ПланыЗакупок"));
	Макеты.Вставить("ПланыЗакупокСОтбором",           ПолучитьМакет("СКД_ПланыЗакупокСОтбором"));
	Макеты.Вставить("ФактыЗакупок",                   ПолучитьМакет("СКД_ФактыЗакупок"));
	Макеты.Вставить("АссортиментЗакупок",             ПолучитьМакет("СКД_АссортиментЗакупок"));
	Макеты.Вставить("НоменклатураПоставщиков",        ПолучитьМакет("СКД_НоменклатураПоставщиков"));
	Макеты.Вставить("ТоварыПриобретенныеУПоставщика", ПолучитьМакет("СКД_ТоварыПриобретенныеУПоставщика"));
	Макеты.Вставить("ЦеныНоменклатурыПоставщиков",    ПолучитьМакет("СКД_ЦеныНоменклатурыПоставщиков"));
	Макеты.Вставить("МинимальнаяЦенаПоставщика",      ПолучитьМакет("СКД_МинимальнаяЦенаПоставщика"));
	
	Возврат Макеты;

