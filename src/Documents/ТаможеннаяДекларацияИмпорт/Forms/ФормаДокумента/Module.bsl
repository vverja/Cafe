			КонецЦикла;
			ПересчитатьПоля(Раздел, "СтавкаПошлины, СтавкаАкциза", Раздел);
		КонецЕсли;
	КонецЦикла;
	
	ЗаполнитьЗначенияСвойств(ЭтаФорма, РазностиИтогов(Объект.Разделы, Объект.Товары));
