									КонецЕсли;
									
								КонецЕсли;
								
								Если КоличествоКОтбору = 0 Тогда
									
									Прервать;
									
								КонецЕсли;
								
							КонецЦикла;
						КонецЦикла;
					КонецЦикла;
				КонецЦикла;
			КонецЦикла;
			
		КонецЦикла;
		
