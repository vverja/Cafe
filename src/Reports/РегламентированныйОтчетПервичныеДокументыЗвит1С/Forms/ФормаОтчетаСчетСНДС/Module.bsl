				Продолжить;
			КонецЕсли;
			
			СтрокаМногострочки["R" + ИмяXSD] = СтрокаТЧ[ИмяКолонки];
			
		КонецЦикла;
		
		НомерСтроки = НомерСтроки + 1;
	КонецЦикла;
	
	ЗначениеВРеквизитФормы(ДанныеМногострочки, СтруктураРеквизитовФормы.мИдГруппы1);	
	
