		?(ЗначениеЗаполнено(Помещение),Помещение,Справочники.СкладскиеПомещения.ПустаяСсылка()));
	Запрос.УстановитьПараметр("Дата",
		?(ЗначениеЗаполнено(Дата),Дата,ТекущаяДатаСеанса()));
	
	Возврат НЕ Запрос.Выполнить().Пустой();
