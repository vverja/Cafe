			ЕстьОшибки = Истина;
		КонецЕсли;
		
		Если Не ЗначениеЗаполнено(Объект.Номенклатура) Тогда
			Поле  = "Объект.Номенклатура";
			Текст = НСтр("ru='Поле ""Номенклатура"" не заполнено';uk='Поле ""Номенклатура"" не заповнено'");
