	СписокПредставлений.Добавить(ОписаниеПредставленияДанных, Представление);
	
	ОписаниеДанных.Вставить("СписокПредставлений", СписокПредставлений);
	ОписаниеДанных.Вставить("ПредставлениеНабора", НСтр("ru='Пользовательское соглашение, Данные для регистрации у оператора ЭДО';uk='Угода, Дані для реєстрації у оператора ЕДО'"));
	
