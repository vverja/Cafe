Функция ПолучитьДанныеФормыНаСервере()
	
	СписокСохранения = Новый Структура();
	
	СохранитьДанныеРаздела(СтруктураРеквизитовФормы.НаимТекущегоРаздела, Ложь);
	
	ПоказателиОтчета = Новый Структура();
	РеквизитыФормы = ПолучитьРеквизиты();
	Для каждого Реквизит Из РеквизитыФормы Цикл
		Если Лев(ВРЕГ(Реквизит.Имя), 15)  = ВРЕГ("СтруктураДанных") Тогда
			ПоказателиОтчета.Вставить(Сред(Реквизит.Имя, 16), ЭтаФорма[Реквизит.Имя]);		
		КонецЕсли;
	КонецЦикла;
	
	Если ПоказателиОтчета.ПервичныйДокумент.Свойство("ПоставщикКод") Тогда
		ПоказателиОтчета.ПервичныйДокумент.ПоставщикКод = ОставитьТолькоЦифры(ПоказателиОтчета.ПервичныйДокумент.ПоставщикКод)		
	КонецЕсли;
	Если ПоказателиОтчета.ПервичныйДокумент.Свойство("ПокупательКод") Тогда
		ПокупательКод = ПоказателиОтчета.ПервичныйДокумент.ПокупательКод;
		ПоказателиОтчета.ПервичныйДокумент.Вставить("ПокупательНаименованиеКода", УдалитьЦифры(ПокупательКод));		
		ПоказателиОтчета.ПервичныйДокумент.Вставить("ПокупательКод", 			  ОставитьТолькоЦифры(ПокупательКод));
	КонецЕсли;
	
	Для каждого ИдМногострочногоРаздела Из мСтруктураМногострочныхРазделов Цикл
		
		СтруктураДанных = Новый Структура;
		
		Таблица = РеквизитФормыВЗначение(ИдМногострочногоРаздела.Значение, Тип("ТаблицаЗначений"));
		КолонкиТаблицы = Таблица.Колонки;
		
		Для каждого Строка Из Таблица Цикл
			
			НомерСтроки = Формат(Таблица.Индекс(Строка) + 1, "ЧГ=0");
			
			Для каждого Колонка Из КолонкиТаблицы Цикл
				СтруктураДанных.Вставить(Колонка.Имя + "_" + НомерСтроки, Строка[Колонка.Имя]);
			КонецЦикла;
			
		КонецЦикла;
		
		ПоказателиОтчета.Вставить(ИдМногострочногоРаздела.Значение, СтруктураДанных);		
		
	КонецЦикла;
 	
	ПоказателиОтчета.Вставить("ДопПоказателиОтчета", СтруктураРеквизитовФормы.ДопПоказателиОтчетаЗвит1С);
		
	// показатели
	СписокСохранения.Вставить("ДанныеОтчета", ПоказателиОтчета);
	
	Возврат СписокСохранения;
	
