	ДопПараметр.Вставить("Тип", 				Новый ОписаниеТипов("Число", Новый КвалификаторыЧисла(15, 3)));
	ДопПараметр.Вставить("Путь", 				ПутьКРеквизиту);
	ДопПараметр.Вставить("Заголовок", 			НСтр("ru='Свободный остаток';uk='Вільний залишок'"));
	ДопПараметр.Вставить("СоздаватьРеквизит", 	НЕ ЭтоПланПродажПоКатегориям);
	
	//Свойства операнда
	ДопПараметр.Вставить("СоздаватьОперанд", 	НЕ ЭтоПланПродажПоКатегориям);
	ДопПараметр.Вставить("ЗаголовокОперанда", 	НСтр("ru='Свободный остаток';uk='Вільний залишок'"));
	
