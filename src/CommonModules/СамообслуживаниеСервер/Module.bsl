		                 ДокументЗаказ.ЖелаемаяДатаОтгрузки,
		                 ТекущаяДатаСеанса());
		
		Если ДокументЗаказ.НеОтгружатьЧастями Тогда
			ДокументЗаказ.ДатаОтгрузки = ДатаОтгрузки;
		КонецЕсли;
