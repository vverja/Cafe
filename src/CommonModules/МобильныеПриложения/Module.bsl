// Формирует дерево используемых метаданных на основании описания, полученного от редактора мобильных приложений
//
// Параметры:
//  ОписаниеМетаданных - XML-строка, содержащая описание используемых метаданных
//
// Возвращаемое значение:
//  Сформированное дерево значений, содержащее данные по используемым метаданным
//
Функция ПолучитьДеревоИспользуемыхМетаданных(ОписаниеМетаданных) Экспорт

	ДеревоМетаданных = Новый ДеревоЗначений();
	ДеревоМетаданных.Колонки.Добавить("Имя");	
	ДеревоМетаданных.Колонки.Добавить("Использование");	
	
	ЧтениеXML = Новый ЧтениеXML();
	ЧтениеXML.УстановитьСтроку(ОписаниеМетаданных);
	
	СтрокаДерева = Неопределено;
	
	Попытка
		
		Пока ЧтениеXML.Прочитать() Цикл	
			
			Если ЧтениеXML.ТипУзла = ТипУзлаXML.НачалоЭлемента Тогда
				
				Если СтрокаДерева = Неопределено Тогда
					КоллекцияСтрокДляДобавления = ДеревоМетаданных.Строки;
				Иначе
					КоллекцияСтрокДляДобавления = СтрокаДерева.Строки;
				КонецЕсли;	
					
				СтрокаДерева = КоллекцияСтрокДляДобавления.Добавить();
				Имя = ЧтениеXML.Имя;
				СтрокаДерева.Имя = Имя;
				
				Если СтрокаДерева.Уровень() = 1 Тогда
					
					Если Имя = "Constants" Тогда
						СтрокаДерева.Имя = "Константы";
					ИначеЕсли Имя = "Catalogs" Тогда
						СтрокаДерева.Имя = "Справочники";
					ИначеЕсли Имя = "Documents" Тогда
						СтрокаДерева.Имя = "Документы";
					ИначеЕсли Имя = "InformationRegisters" Тогда
						СтрокаДерева.Имя = "РегистрыСведений";
					КонецЕсли;
						
				КонецЕсли;
				
			ИначеЕсли ЧтениеXML.ТипУзла = ТипУзлаXML.КонецЭлемента Тогда
				
				Если СтрокаДерева <> Неопределено Тогда
					СтрокаДерева = СтрокаДерева.Родитель;
				КонецЕсли;	
				
			КонецЕсли;
				
		КонецЦикла;
			
	Исключение
		
		#Если ВнешнееСоединение Тогда
		ВызватьИсключение(НСтр("ru='Ошибка чтения перечня метаданных, используемых мобильным приложением';uk='Помилка читання переліку метаданих, що використовуються мобільним додатком'"));
		#КонецЕсли
	
	КонецПопытки;
	
	Возврат ДеревоМетаданных;

КонецФункции

Функция СтруктураСоставаОбъектаМетаданных(ИмяКласса, ИмяОбъекта, СтруктураИспользованияОбъекта) Экспорт
	
	ОбъектМетаданных = Метаданные[ИмяКласса][ИмяОбъекта];
	
	Если СтруктураИспользованияОбъекта.Свойство("Реквизиты") Тогда
		СтруктураИспользуемыхРеквизитов = СтруктураИспользованияОбъекта.Реквизиты;
	Иначе
		СтруктураИспользуемыхРеквизитов = Новый Структура;
	КонецЕсли;
	
	Если СтруктураИспользованияОбъекта.Свойство("ТабличныеЧасти") Тогда
		СтруктураИспользуемыхТабличныхЧастей = СтруктураИспользованияОбъекта.ТабличныеЧасти;
	Иначе
		СтруктураИспользуемыхТабличныхЧастей = Новый Структура;
	КонецЕсли;
	
	СтруктураСостава = Новый Структура();
	СтруктураРеквизитов = Новый Структура();
	СтруктураТабличныхЧастей = Новый Структура();
	
	Если ИмяКласса = "Справочники" Тогда
		СоответствиеИмен = СоответствиеИменСтандартныхРеквизитовСправочника();
	ИначеЕсли ИмяКласса = "Документы" Тогда
		СоответствиеИмен = СоответствиеИменСтандартныхРеквизитовДокумента();
	КонецЕсли;
	
	Для Каждого Реквизит из ОбъектМетаданных.СтандартныеРеквизиты Цикл
		
		ИмяРеквизита = СоответствиеИмен.Получить(Реквизит.Имя);
		
		Если ИмяРеквизита = Неопределено Тогда
			Продолжить;
		КонецЕсли;
		
		Если ИмяКласса = "Справочники" Тогда
			СтруктураРеквизита = ПолучитьСтруктуруОписанияРеквизитаСправочника(ОбъектМетаданных, ИмяРеквизита);
		ИначеЕсли ИмяКласса = "Документы" Тогда
			СтруктураРеквизита = ПолучитьСтруктуруОписанияРеквизитаДокумента(ОбъектМетаданных, ИмяРеквизита);
		КонецЕсли;
		
		СтруктураРеквизитов.Вставить(ИмяРеквизита, СтруктураРеквизита);
		
	КонецЦикла;
	
	Для Каждого Реквизит из ОбъектМетаданных.Реквизиты Цикл
		
		Если НЕ СтруктураИспользуемыхРеквизитов.Свойство(Реквизит.Имя) Тогда
			// реквизиты, которые не используются, не учитываются
			Продолжить;
		КонецЕсли;
		
		Если ИмяКласса = "Справочники" Тогда
			СтруктураРеквизита = ПолучитьСтруктуруОписанияРеквизитаСправочника(ОбъектМетаданных, Реквизит.Имя);
		ИначеЕсли ИмяКласса = "Документы" Тогда
			СтруктураРеквизита = ПолучитьСтруктуруОписанияРеквизитаДокумента(ОбъектМетаданных, Реквизит.Имя);
		КонецЕсли;
		
		СтруктураРеквизитов.Вставить(Реквизит.Имя, СтруктураРеквизита);
		
	КонецЦикла;
	
	Для Каждого ТабличнаяЧасть из ОбъектМетаданных.ТабличныеЧасти Цикл
		
		Если НЕ СтруктураИспользуемыхТабличныхЧастей.Свойство(ТабличнаяЧасть.Имя) Тогда
			// Табличные части, которые не используются, не учитываются
			Продолжить;
		КонецЕсли;
		
		СтруктураИспользованияТабличнойЧасти = СтруктураИспользуемыхТабличныхЧастей[ТабличнаяЧасть.Имя];
		
		СтруктураОписанияТабличнойЧасти = Новый Структура;
		СтруктураРеквизитовТЧ = Новый Структура;
		
		Для Каждого РеквизитТЧ из ТабличнаяЧасть.Реквизиты Цикл
			
			Если НЕ СтруктураИспользованияТабличнойЧасти.Свойство(РеквизитТЧ.Имя) Тогда
				// Реквизиты табличной части, которые не используются, не учитываются
				Продолжить;
			КонецЕсли;
			
			СтруктураРеквизитаТЧ = Новый Структура;
			
			УказаниеТипа = ПолучитьУказаниеТипаРеквизита(РеквизитТЧ);
			ТипРеквизита = ПолучитьТипРеквизита(РеквизитТЧ);
			
			СтруктураРеквизитаТЧ.Вставить("УказаниеТипа", УказаниеТипа);
			СтруктураРеквизитаТЧ.Вставить("Тип", ТипРеквизита);
			
			СтруктураРеквизитовТЧ.Вставить(РеквизитТЧ.Имя, СтруктураРеквизитаТЧ);
				
		КонецЦикла;
		
		Если ИмяКласса = "Справочники" Тогда
				
			СтруктураИспользованияТабличнойЧасти = ПолучитьСтруктуруИспользованияСвойстваСправочника(ТабличнаяЧасть);
			
			СтруктураОписанияТабличнойЧасти.Вставить("ИспользуетсяДляЭлемента", СтруктураИспользованияТабличнойЧасти.ИспользуетсяДляЭлемента);
			СтруктураОписанияТабличнойЧасти.Вставить("ИспользуетсяДляГруппы", СтруктураИспользованияТабличнойЧасти.ИспользуетсяДляГруппы);
				
		КонецЕсли;
		
		СтруктураОписанияТабличнойЧасти.Вставить("СтруктураРеквизитов", СтруктураРеквизитовТЧ);
		
		СтруктураТабличныхЧастей.Вставить(ТабличнаяЧасть.Имя, СтруктураОписанияТабличнойЧасти);
		
	КонецЦикла;
	
	СтруктураСостава.Вставить("Реквизиты", СтруктураРеквизитов);
	СтруктураСостава.Вставить("ТабличныеЧасти", СтруктураТабличныхЧастей);
	
	Возврат СтруктураСостава;
	
