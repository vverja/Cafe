// Процедура проводит документы ввода остатков 
// 
Процедура ПровестиДокументыВводаОстатков() Экспорт
	МассивДокументов = ПолучитьМассивДокументовВводаОстатков("проведение");
	Для каждого ДокСсылка ИЗ МассивДокументов Цикл
		ДокОбъект = ДокСсылка.ПолучитьОбъект();
		Попытка
			//Док Пересчет товаров - особый алгоритм. Последовательное проведение в разных статусах
			Если ТипЗнч(ДокСсылка) = Тип("ДокументСсылка.ПересчетТоваров") Тогда
				ДокОбъект.Статус = Перечисления.СтатусыПересчетовТоваров.ВРаботе;
				ДокОбъект.Записать(РежимЗаписиДокумента.Проведение);
				ДокОбъект.Статус = Перечисления.СтатусыПересчетовТоваров.Выполнено;
			КонецЕсли;
			ДокОбъект.Записать(РежимЗаписиДокумента.Проведение);
			СообщениеСвертки(НСтр("ru='Проведен';uk='Проведено'")+": "+ ДокОбъект.Ссылка);
		Исключение
			СообщениеСвертки(НСтр("ru='Не удалось провести документ';uk='Не вдалося провести документ'")+" :" + ДокОбъект.Ссылка, Истина, ОписаниеОшибки());
		КонецПопытки;
	КонецЦикла;
КонецПроцедуры

