	СписокПредставлений.Добавить(ОписаниеПредставленияЗаявления, Представление);
	
	Представление = НСтр("ru='Данные для регистрации учетной записи у оператора ЭДО';uk='Дані для реєстрації облікового запису в оператора ЕДО'");
