		КнопкиВопроса.Добавить("Отмена", НСтр("ru='Отмена';uk='Відмінити'"));
		
		ПоказатьВопрос(Новый ОписаниеОповещения("РассчитатьСтатусДокументаЗавершение", ЭтотОбъект, Новый Структура("КнопкиВопроса, РезультатыПроверки", КнопкиВопроса, РезультатыПроверки)), РезультатыПроверки.ВопросТребованияРасчета, 
						КнопкиВопроса, , 
